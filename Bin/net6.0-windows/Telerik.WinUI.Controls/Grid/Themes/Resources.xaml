                      Glyph="&#xe70d;" FontSize="10"
                      FontFamily="{ThemeResource SymbolThemeFontFamily}"
                      Foreground="{ThemeResource TelerikGrid_GroupingFlyoutHeaderGlyphForeground}"
                      VerticalAlignment="Center"
                      Margin="8 0"/>
