                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </ContentControl.RenderTransform>
                        </ContentControl>
                        <FontIcon Glyph="{Binding SortOrder, Converter={StaticResource SortOrderConverter}}"
                                  FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="10"
                                  Foreground="{ThemeResource TelerikGrid_GroupingFlyoutHeaderGlyphForeground}"
                                  Margin="8 0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <primitivesCommon:InlineButton x:Name="PART_CloseButton"
                                                   Grid.Column="1"
                                                   Opacity="0"
                                                   Content="&#xe711;"
                                                   FontSize="12"
                                                   FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                   Style="{StaticResource GroupingFlyoutHeaderCloseButtonStyle}"
