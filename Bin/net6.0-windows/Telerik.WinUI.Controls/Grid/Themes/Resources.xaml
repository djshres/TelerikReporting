                                             Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="00:00:00.2"/>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="IndicatorsStates">
                    <VisualState x:Name="NoActiveIndicator">
                        <VisualState.Setters>
                            <Setter Target="PART_InsertBeforeIndicator.Visibility" Value="Collapsed"/>
                            <Setter Target="PART_InsertAfterIndicator.Visibility" Value="Collapsed"/>
                            <Setter Target="PART_GroupOrderIndicator.Visibility" Value="Visible"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="InsertBeforeIndicatorActive">
                        <VisualState.Setters>
                            <Setter Target="PART_InsertBeforeIndicator.Visibility" Value="Visible"/>
                            <Setter Target="PART_InsertAfterIndicator.Visibility" Value="Collapsed"/>
                            <Setter Target="PART_GroupOrderIndicator.Visibility" Value="Visible"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="InsertAfterIndicatorActive">
                        <VisualState.Setters>
                            <Setter Target="PART_InsertBeforeIndicator.Visibility" Value="Collapsed"/>
                            <Setter Target="PART_InsertAfterIndicator.Visibility" Value="Visible"/>
                            <Setter Target="PART_GroupOrderIndicator.Visibility" Value="Collapsed"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <FontIcon x:Name="PART_InsertBeforeIndicator"
