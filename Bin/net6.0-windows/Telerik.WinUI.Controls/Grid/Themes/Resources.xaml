    <Style TargetType="localPrimitives:DataGridLoadDataControl">
        <Setter Property="Background" Value="{ThemeResource TelerikGrid_LoadMoreDataBackground}"/>
        <Setter Property="MinWidth" Value="50"/>
        <Setter Property="MinHeight" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localPrimitives:DataGridLoadDataControl">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="Loading">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_LoadButton" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="loadingProgressBar"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="loadingProgressBar"
                                                                       Storyboard.TargetProperty="IsIndeterminate">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="True" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid>
                            <primitivesCommon:InlineButton x:Name="PART_LoadButton"
                                                           Foreground="{ThemeResource TelerikGrid_LoadMoreDataButtonForeground}"
                                                           PointerOverForegroundBrush="{ThemeResource TelerikGrid_LoadMoreDataButtonForeground}"
                                                           PressedForegroundBrush="{ThemeResource TelerikGrid_LoadMoreDataButtonForegroundPressed}"
                                                           Background="{ThemeResource TelerikGrid_LoadMoreDataButtonBackground}"
                                                           PointerOverBackgroundBrush="{ThemeResource TelerikGrid_LoadMoreDataButtonBackgroundPointerOver}"
                                                           PressedBackgroundBrush="{ThemeResource TelerikGrid_LoadMoreDataButtonBackgroundPressed}"
                                                           BorderBrush="{ThemeResource TelerikGrid_LoadMoreDataButtonBorderBrush}"
                                                           PointerOverBorderBrush="{ThemeResource TelerikGrid_LoadMoreDataButtonBorderBrushPointerOver}"
                                                           PressedBorderBrush="{ThemeResource TelerikGrid_LoadMoreDataButtonBorderBrushPressed}"
                                                           BorderThickness="1"
                                                           MinHeight="{ThemeResource TelerikGrid_LoadMoreDataButtonMinHeight}"
                                                           HorizontalAlignment="Stretch">
                                <primitivesCommon:InlineButton.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xe74b;"
                                                   FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                   FontSize="14"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding LoadMoreRowsText, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                   VerticalAlignment="Center"
                                                   Margin="5 0 0 0"/>
                                    </StackPanel>
                                </primitivesCommon:InlineButton.Content>
                            </primitivesCommon:InlineButton>
                            <ProgressBar x:Name="loadingProgressBar"
                                         Style="{StaticResource LoadMoreDataProgressBarStyle}"
                                         Visibility="Collapsed"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="localPrimitives:DataGridAutoDataLoadingControl">
        <Setter Property="IsHitTestVisible" Value="False"/>
