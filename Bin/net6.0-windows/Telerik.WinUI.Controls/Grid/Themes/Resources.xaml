<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="using:Telerik.Core"
    xmlns:local="using:Telerik.UI.Xaml.Controls.Grid"
    xmlns:localPrimitives="using:Telerik.UI.Xaml.Controls.Grid.Primitives"
    xmlns:localView="using:Telerik.UI.Xaml.Controls.Grid.View"
    xmlns:input="using:Telerik.UI.Xaml.Controls.Input"
    xmlns:primitivesCommon="using:Telerik.UI.Xaml.Controls.Primitives.Common">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Telerik.WinUI.Controls/Primitives/Themes/Buttons.xaml"/>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark" Source="ms-appx:///Telerik.WinUI.Controls/Grid/Themes/ThemeResourcesDark.xaml"/>
                <ResourceDictionary x:Key="Light" Source="ms-appx:///Telerik.WinUI.Controls/Grid/Themes/ThemeResourcesLight.xaml"/>
                <ResourceDictionary x:Key="HighContrast" Source="ms-appx:///Telerik.WinUI.Controls/Grid/Themes/ThemeResourcesHighContrast.xaml"/>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>

        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark" Source="{CustomResource DarkResourcesPath}"/>
                <ResourceDictionary x:Key="Light" Source="{CustomResource LightResourcesPath}"/>
                <ResourceDictionary x:Key="HighContrast" Source="{CustomResource HighContrastResourcesPath}"/>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <core:BoolToVisibilityConverter x:Key="VisibilityConverter" />
    <core:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    <localView:GroupPositionToAlignmentConverter x:Key="PositionToAlignmentConverter" />
    <localView:DataOperationsButtonTextConverter x:Key="DataOperationsButtonTextConverter" />
    <localView:BorderThicknessToMarginConverter x:Key="BorderThicknessToMarginConverter" />
    <localView:DataOperationsButtonOpacityConverter x:Key="DataOperationsButtonOpacityConverter" />
    <localView:SortDirectionToGlyphConverter x:Key="SortDirectionConverter"/>
    <localView:LogicalOperatorConverter x:Key="LogicalOperatorConverter" />
    <localView:FilterOperatorConverter x:Key="FilterOperatorConverter" />

    <x:Double x:Key="TelerikGrid_RowHeight">42</x:Double>

    <x:Double x:Key="TelerikGrid_ColumnsFlyoutHeaderHeight">42</x:Double>
    <x:Double x:Key="TelerikGrid_ColumnHeaderMinHeight">42</x:Double>
    <x:Double x:Key="TelerikGrid_FilteringFlyoutButtonMinHeight">32</x:Double>
    <x:Double x:Key="TelerikGrid_TextFilterCaseButtonWidth">32</x:Double>
    <x:Double x:Key="TelerikGrid_TextFilterCaseButtonHeight">32</x:Double>
    <x:Double x:Key="TelerikGrid_EditRowButtonMinHeight">32</x:Double>

    <x:Double x:Key="TelerikGrid_OpenButtonWidth">32</x:Double>
    <x:Double x:Key="TelerikGrid_OpenButtonHeight">32</x:Double>

    <x:Double x:Key="TelerikGrid_LoadMoreDataButtonMinHeight">32</x:Double>

    <x:Double x:Key="TelerikGrid_ColumnReorderServicePanelMinHeight">40</x:Double>

    <Style x:Key="GridServiceButtonStyle" TargetType="primitivesCommon:InlineButton" BasedOn="{StaticResource InlineButtonStyle}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="PointerOverBackgroundBrush" Value="Transparent"/>
        <Setter Property="PointerOverForegroundBrush" Value="{ThemeResource TelerikGrid_ServiceButtonPointerOverForeground}"/>
        <Setter Property="PressedBackgroundBrush" Value="Transparent"/>
        <Setter Property="PressedForegroundBrush" Value="{ThemeResource TelerikGrid_ServiceButtonPressedForeground}"/>
        <Setter Property="AutomationProperties.Name" Value="Filter"/>
    </Style>

    <!--#region DataOperations-->
    <Style TargetType="localPrimitives:ColumnHeaderDataOperationsButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{ThemeResource TelerikGrid_DataOperationsButtonForeground}"/>
        <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="UseSystemFocusVisuals" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid x:Name="RootGrid" Background="{TemplateBinding Background}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <PointerUpThemeAnimation Storyboard.TargetName="RootGrid"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TelerikGrid_DataOperationsButtonForegroundActive}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="Icon">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TelerikGrid_DataOperationsButtonForegroundActive}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <PointerUpThemeAnimation Storyboard.TargetName="RootGrid"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TelerikGrid_DataOperationsButtonForegroundActive}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="Icon">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TelerikGrid_DataOperationsButtonForegroundActive}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <PointerDownThemeAnimation Storyboard.TargetName="RootGrid"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlDisabledBaseMediumLowBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="ContentPresenter">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlDisabledTransparentBrush}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid Margin="{TemplateBinding Padding}"
                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Icon"
                                           Foreground="{TemplateBinding Foreground}"
                                           FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                           Text="{Binding IconText, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                           VerticalAlignment="Center"
                                           Margin="0 0 5 0"/>
                                <ContentPresenter x:Name="ContentPresenter" Grid.Column="1"
                                                  VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  AutomationProperties.AccessibilityView="Raw"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  ContentTransitions="{TemplateBinding ContentTransitions}"
                                                  Content="{TemplateBinding Content}" />
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="localPrimitives:DataGridDataOperationsControl">
        <Setter Property="Background" Value="{ThemeResource TelerikGrid_DataOperationsControlBackground}" />
        <Setter Property="BorderBrush" Value="{ThemeResource TelerikGrid_DataOperationsControlBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{ThemeResource TelerikOverlayCornerRadius}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localPrimitives:DataGridDataOperationsControl">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Translation="0,0,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <localPrimitives:ColumnHeaderDataOperationsButton Padding="0 8" Margin="8 4" IconText="&#xE71C;"
                                                                              Opacity="{Binding CanFilter, Converter={StaticResource DataOperationsButtonOpacityConverter}}"
                                                                              core:LocalizationManager.Key="DataOperationsButtonFilter"
                                                                              core:LocalizationManager.PropertyName="Content"
                                                                              Command="{Binding Command}" CommandParameter="Filter" />
                            <localPrimitives:ColumnHeaderDataOperationsButton Padding="0 8" Margin="8 4" IconText="&#xE8CB;"
                                                                              Opacity="{Binding CanSort, Converter={StaticResource DataOperationsButtonOpacityConverter}}"
                                                                              core:LocalizationManager.Key="DataOperationsButtonSort"
                                                                              core:LocalizationManager.PropertyName="Content" 
                                                                              Command="{Binding Command}" CommandParameter="Sort" Grid.Column="1" />
                            <localPrimitives:ColumnHeaderDataOperationsButton Padding="0 8" Margin="8 4" IconText="&#xE8C4;"
                                                                              Opacity="{Binding CanGroup, Converter={StaticResource DataOperationsButtonOpacityConverter}}"
                                                                              Content="{Binding Command.IsGrouped, Converter={StaticResource DataOperationsButtonTextConverter}}"
                                                                              Command="{Binding Command}" CommandParameter="Group" Grid.Column="2" />
                        </Grid>
                        <Border.Shadow>
                            <ThemeShadow/>
                        </Border.Shadow>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->

    <!--Shown when IsCellFlyoutEnabled="True" for a DataGridTextColumn only and the pointer is over a cell-->
    <Style TargetType="localPrimitives:DataGridCellFlyoutControl">
        <Setter Property="Background" Value="{ThemeResource TelerikGrid_CellFlyoutControlBackground}" />
        <Setter Property="BorderBrush" Value="{ThemeResource TelerikGrid_CellFlyoutControlBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localPrimitives:DataGridCellFlyoutControl">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Child="{TemplateBinding Child}"
                            Translation="0,0,6">
                        <Border.Shadow>
                            <ThemeShadow/>
                        </Border.Shadow>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="localPrimitives:DataGridContentFlyout">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localPrimitives:DataGridContentFlyout">
                    <Border x:Name="PART_Content"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
 
    <Style TargetType="local:RadDataGrid">
        <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}"/>
        <Setter Property="Foreground" Value="{ThemeResource TelerikGrid_Foreground}"/>
        <Setter Property="Background" Value="{ThemeResource TelerikGrid_Background}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource TelerikGrid_BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1 0 1 1"/>
        <Setter Property="GridLinesBrush" Value="{ThemeResource TelerikGrid_BorderBrush}"/>
        <Setter Property="AlternateRowBackground" Value="{ThemeResource TelerikGrid_BackgroundAlternateRow}"/>
        <Setter Property="AggregateRowBackground" Value="{ThemeResource TelerikGrid_BackgroundAggregateRow}"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="100"/>
        <Setter Property="HideFlyoutOnBackButtonPressed" Value="True" />
        <Setter Property="RowHeight" Value="{ThemeResource TelerikGrid_RowHeight}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:RadDataGrid">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">

                        <localPrimitives:DataGridRootPanel x:Name="PART_TableRoot">
                            <ScrollViewer x:Name="PART_ScrollViewer"
                                          VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                                          HorizontalScrollMode="Auto" VerticalScrollMode="Auto"
                                          ZoomMode="Disabled" IsTabStop="False">
                                <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Canvas x:Name="PART_DecorationsHost"/>
                                    <localPrimitives:DataGridCellsPanel x:Name="PART_CellsHost" Background="#00000000" />
                                    <Canvas x:Name="PART_ScrollableAdornerHost"/>
                                </Grid>
                                <ScrollViewer.TopHeader>
                                    <Grid>
                                        <localPrimitives:DataGridColumnHeaderPanel x:Name="PART_ColumnHeadersHost" ManipulationMode="All" Background="{TemplateBinding Background}"/>
                                        <localPrimitives:FrozenGroupsPanel x:Name="PART_HeadersHost" Grid.Row="1"/>
                                    </Grid>
                                </ScrollViewer.TopHeader>
                                <ScrollViewer.TopLeftHeader>
                                    <Canvas x:Name="PART_FrozenColumnHeadersHost" Background="{TemplateBinding Background}"/>
                                </ScrollViewer.TopLeftHeader>
                                <ScrollViewer.LeftHeader>
                                    <Grid>
                                        <Canvas x:Name="PART_FrozenDecorationsHost" Background="{TemplateBinding Background}"/>
                                        <Canvas x:Name="PART_FrozenColumnsHost" Background="#00000000"/>
                                        <Canvas x:Name="PART_GroupHeadersHost"/>
                                    </Grid>
                                </ScrollViewer.LeftHeader>
                            </ScrollViewer>

                            <localPrimitives:DataGridServicePanel x:Name="PART_ServicePanel" Position="{TemplateBinding GroupPanelPosition}" IsTabStop="False"/>
                            <localPrimitives:DataGridColumnReorderServicePanel x:Name="PART_ColumnReorderServicePanel" Margin="{Binding BorderThickness, RelativeSource={RelativeSource Mode=TemplatedParent}, Converter={StaticResource BorderThicknessToMarginConverter}}" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed"/>
                            <Canvas x:Name="PART_AdornerHost" IsHitTestVisible="False"/>
                            <localPrimitives:DataGridContentFlyout x:Name="PART_GridFlyout" IsTabStop="False"/>
                        </localPrimitives:DataGridRootPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#region Grouping-->
    <Style TargetType="localPrimitives:DataGridFlyoutHeaderCancelButton" BasedOn="{StaticResource InlineButtonStyle}">
        <Setter Property="Background" Value="{ThemeResource TelerikGrid_FlyoutHeaderCancelButtonBackground}"/>
        <Setter Property="Foreground" Value="{ThemeResource TelerikGrid_FlyoutHeaderCancelButtonForeground}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource TelerikGrid_FlyoutHeaderCancelButtonBorderBrush}"/>
        <Setter Property="PointerOverBackgroundBrush" Value="{ThemeResource TelerikGrid_FlyoutHeaderCancelButtonPointerOverBackground}"/>
        <Setter Property="PointerOverForegroundBrush" Value="{ThemeResource TelerikGrid_FlyoutHeaderCancelButtonPointerOverForeground}"/>
        <Setter Property="PointerOverBorderBrush" Value="{ThemeResource TelerikGrid_FlyoutHeaderCancelButtonPointerOverBorderBrush}"/>
        <Setter Property="PressedBackgroundBrush" Value="{ThemeResource TelerikGrid_FlyoutHeaderCancelButtonPressedBackground}"/>
        <Setter Property="PressedForegroundBrush" Value="{ThemeResource TelerikGrid_FlyoutHeaderCancelButtonPressedForeground}"/>
        <Setter Property="PressedBorderBrush" Value="{ThemeResource TelerikGrid_FlyoutHeaderCancelButtonPressedBorderBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>

    <!--#region Left/Top Panel Flyout-->
    <Style TargetType="localPrimitives:RotatedContainer">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localPrimitives:RotatedContainer">
                    <ContentPresenter Content="{TemplateBinding Child}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--GroupPanel-->
    <ControlTemplate x:Key="PopupTemplate" TargetType="localPrimitives:DataGridServicePanel">
        <Border x:Name="LayoutRoot" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="NormalGrouped">
                        <Storyboard>
                            <!--Glyph-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandCollapseGlyph" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GlyphScaleTransform" Storyboard.TargetProperty="ScaleY">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="1"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GlyphScaleTransform" Storyboard.TargetProperty="ScaleX">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="-1"/>
                            </ObjectAnimationUsingKeyFrames>
                            <!--DragDrop-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Collapsed"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHereText" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Collapsed"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Expanded">
                        <Storyboard>
                            <!--Glyph-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandCollapseGlyph" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GlyphScaleTransform" Storyboard.TargetProperty="ScaleY">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="-1"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GlyphScaleTransform" Storyboard.TargetProperty="ScaleX">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="1"/>
                            </ObjectAnimationUsingKeyFrames>
                            <!--DragDrop-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Collapsed"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHereText" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Collapsed"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="DragHinting">
                        <Storyboard>
                            <!--Glyph-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandCollapseGlyph" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Collapsed"/>
                            </ObjectAnimationUsingKeyFrames>
                            <!--GroupPanel-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GroupPanel" Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource TelerikGrid_BackgroundDragging}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <!--DragDrop-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHereText" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource TelerikGrid_ForegroundDragging}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHereText" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="DropPossible">
                        <Storyboard>
                            <!--Glyph-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandCollapseGlyph" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Collapsed"/>
                            </ObjectAnimationUsingKeyFrames>
                            <!--GroupPanel-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="GroupPanel" Storyboard.TargetProperty="Background">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource TelerikGrid_BackgroundDragging}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <!--DragDrop-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHereText" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{ThemeResource TelerikGrid_ForegroundDragging}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHereText" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Visible"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="Position">
                    <VisualState x:Name="Left">
                        <VisualState.Setters>
                            <Setter Target="ExpandCollapseGlyph.Margin" Value="3 0 0 0"/>
                        </VisualState.Setters>
                        <Storyboard>
                            <!--Glyph-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandCollapseGlyph" Storyboard.TargetProperty="HorizontalAlignment">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Center"/>
                            </ObjectAnimationUsingKeyFrames>
                            <!--DragDrop-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="HorizontalAlignment">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Center"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RotatedContainer" Storyboard.TargetProperty="RotationAngle">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="-90"/>
                            </ObjectAnimationUsingKeyFrames>
                            <!--Flyout-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyoutContent" Storyboard.TargetProperty="MinWidth">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="230"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyoutContent" Storyboard.TargetProperty="Margin">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="-2 -1 0 0"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyoutContent" Storyboard.TargetProperty="BorderThickness">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="0 1 1 1"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyout" Storyboard.TargetProperty="ChildTransitions">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <TransitionCollection>
                                            <PaneThemeTransition Edge="Left"/>
                                        </TransitionCollection>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Bottom">
                        <VisualState.Setters>
                            <Setter Target="ExpandCollapseGlyph.Margin" Value="0 3 0 0"/>
                        </VisualState.Setters>
                        <Storyboard>
                            <!--Glyph-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandCollapseGlyph" Storyboard.TargetProperty="HorizontalAlignment">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Left"/>
                            </ObjectAnimationUsingKeyFrames>
                            <!--DragDrop-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="HorizontalAlignment">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Left"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RotatedContainer" Storyboard.TargetProperty="RotationAngle">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="0"/>
                            </ObjectAnimationUsingKeyFrames>
                            <!--Flyout-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyoutContent" Storyboard.TargetProperty="BorderThickness">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="1 1 1 0"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyoutContent" Storyboard.TargetProperty="Margin">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="0"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_GroupFlyout" Storyboard.TargetProperty="ChildTransitions">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <TransitionCollection>
                                            <PaneThemeTransition Edge="Bottom"/>
                                        </TransitionCollection>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Top">
                        <VisualState.Setters>
                            <Setter Target="ExpandCollapseGlyph.Margin" Value="0 3 0 0"/>
                        </VisualState.Setters>
                        <Storyboard>
                            <!--Glyph-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandCollapseGlyph" Storyboard.TargetProperty="HorizontalAlignment">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Left"/>
                            </ObjectAnimationUsingKeyFrames>
                            <!--DragDrop-->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DragHintGlyph" Storyboard.TargetProperty="HorizontalAlignment">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="Left"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RotatedContainer" Storyboard.TargetProperty="RotationAngle">
