<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:telerik="using:Telerik.UI.Xaml.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Telerik.WinUI.Controls/Primitives/Themes/ThemeColorsDark.xaml"/>
        <ResourceDictionary>
            <telerik:UserThemeResources x:Key="ResourceLoaderInitializer"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="{CustomResource DarkResourcesPath}"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <!-- DragVisual start -->
    <SolidColorBrush x:Key="TelerikDragDrop_DragVisualForeground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="TelerikDragDrop_DragVisualBackground" Color="#282828" />
    <SolidColorBrush x:Key="TelerikDragDrop_DragVisualBorderBrush" Color="#12FFFFFF" />
    <SolidColorBrush x:Key="TelerikDragDrop_DragVisualMultiItemBackground" Color="#282828" />
    <SolidColorBrush x:Key="TelerikDragDrop_DragVisualMultiItemBorderBrush" Color="#12FFFFFF" />
    <SolidColorBrush x:Key="TelerikDragDrop_DragVisualNormalBrush" Color="#C5FFFFFF" />
    <SolidColorBrush x:Key="TelerikDragDrop_DragVisualImportantBrush" Color="#FF99A4" />
    <!-- DragVisual end -->
</ResourceDictionary>

