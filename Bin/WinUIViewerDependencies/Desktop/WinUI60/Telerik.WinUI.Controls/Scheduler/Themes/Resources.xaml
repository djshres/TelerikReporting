                                  FontSize="12" 
                                  Margin="2 2 0 0" 
                                  Visibility="{Binding RecurrenceState, Converter={StaticResource RecurrenceStateIsOccurenceToVisibilityConverter}}"/>

                        <FontIcon x:Name="ExceptionMark" 
