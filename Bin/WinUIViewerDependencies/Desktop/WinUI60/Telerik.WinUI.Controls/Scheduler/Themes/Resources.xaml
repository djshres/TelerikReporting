                                        <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource ListBoxItemForeground}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="PressedBackground.Fill" Value="{ThemeResource ListBoxItemBackgroundPressed}"/>
                                        <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource ListBoxItemForeground}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Target="PressedBackground.Fill" Value="{ThemeResource ListBoxItemBackgroundSelected}"/>
                                        <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource ListBoxItemForeground}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="SelectedUnfocused">
                                    <VisualState.Setters>
                                        <Setter Target="PressedBackground.Fill" Value="{ThemeResource ListBoxItemBackgroundSelected}"/>
                                        <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource ListBoxItemForeground}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="SelectedPointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="PressedBackground.Fill" Value="{ThemeResource ListBoxItemBackgroundSelectedPointerOver}"/>
                                        <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource ListBoxItemForeground}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="SelectedPressed">
                                    <VisualState.Setters>
                                        <Setter Target="PressedBackground.Fill" Value="{ThemeResource ListBoxItemBackgroundSelectedPressed}"/>
                                        <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource ListBoxItemForeground}"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Rectangle x:Name="PressedBackground" Fill="Transparent" Control.IsTemplateFocusTarget="True" />
                        <ContentPresenter
                            x:Name="ContentPresenter"
                            Content="{TemplateBinding Content}"
                            ContentTransitions="{TemplateBinding ContentTransitions}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            Style="{StaticResource BodyContentPresenterStyle}"
                            TextWrapping="NoWrap"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Margin="{TemplateBinding Padding}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="RadSchedulerControlTemplate" TargetType="local:RadScheduler">
        <Grid Background="{TemplateBinding Background}"
              BorderBrush="{TemplateBinding BorderBrush}"
              BorderThickness="{TemplateBinding BorderThickness}">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="OrientationStates">
                    <!-- Timeline / Month / AgendaView -->
                    <VisualState x:Name="Horizontal">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="HeadersHeight" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <!-- remove border above headers in Month View -->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="HorizontalHeadersBorder" Storyboard.TargetProperty="BorderThickness">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Thickness>0 0 1 0</Thickness>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <!-- Day / WeekView -->
                    <VisualState x:Name="Vertical">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="HeadersWidth" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ItemsHost" Storyboard.TargetProperty="(Grid.Column)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <x:Int32>1</x:Int32>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ItemsHost" Storyboard.TargetProperty="(Grid.ColumnSpan)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <x:Int32>1</x:Int32>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ItemsHost" Storyboard.TargetProperty="(Grid.Row)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <x:Int32>0</x:Int32>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ItemsHost" Storyboard.TargetProperty="(Grid.RowSpan)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <x:Int32>2</x:Int32>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_TimeRulerPanel" Storyboard.TargetProperty="(Grid.Column)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <x:Int32>0</x:Int32>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_TimeRulerPanel" Storyboard.TargetProperty="(Grid.Row)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <x:Int32>1</x:Int32>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_TimeRulerIndicatorsPanel" Storyboard.TargetProperty="(Grid.Column)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <x:Int32>0</x:Int32>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_TimeRulerIndicatorsPanel" Storyboard.TargetProperty="(Grid.Row)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <x:Int32>1</x:Int32>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <!--remove top border of AppointmentsBorder in Day/Week View -->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="AppointmentsBorder" Storyboard.TargetProperty="BorderThickness">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Thickness>1 0 0 1</Thickness>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <!-- remove right border of VerticalHeadersBorder in Day/Week View -->
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="VerticalHeadersBorder" Storyboard.TargetProperty="BorderThickness">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Thickness>0 1</Thickness>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid>
                <local:CommandManager.InputBindings>
                    <local:InputBindingCollection>
                        <local:KeyBinding Key="Delete" Command="{core:Static Member=local:RadSchedulerCommands.DeleteAppointment}" />
                        <!--<local:KeyBinding Command="{StaticResource CreateAppointment}" Key="O" Modifiers="Alt" /> Therer is no ALT-->
                        <local:KeyBinding Command="{core:Static Member=local:RadSchedulerCommands.CreateInlineAppointment}" Key="Insert" />
                        <local:KeyBinding Command="{core:Static Member=local:RadSchedulerCommands.CreateAppointment}" Key="O" Modifiers="Control" />
                        <local:MouseBinding MouseAction="LeftDoubleClick" Command="{core:Static Member=local:RadSchedulerCommands.CreateAppointment}" />
                    </local:InputBindingCollection>
                </local:CommandManager.InputBindings>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border x:Name="NavigationHeader"
                        MinHeight="{ThemeResource TelerikScheduler_NavigationHeaderHeight}"
                        Visibility="{TemplateBinding NavigationHeaderVisibility}"
                        Background="{ThemeResource TelerikScheduler_NavigationHeaderBackground}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="0">
                    <Grid x:Name="SchedulerHeader">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <local:RadButton Style="{StaticResource NavigationButtonBackStyle}"
                                             AutomationProperties.Name="Navigation Back"
                                             Command="{core:Static Member=local:RadSchedulerCommands.DecreaseVisibleDateLarge}"
                                             CommandTarget="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                             Margin="10 0 0 0">
                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE70E;" FontSize="16"/>
                            </local:RadButton>
                            <local:RadButton Style="{StaticResource NavigationButtonNextStyle}"
                                             AutomationProperties.Name="Navigation Next"
                                             Command="{core:Static Member=local:RadSchedulerCommands.IncreaseVisibleDateLarge}"
                                             CommandTarget="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                             Margin="10 0 0 0">
                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE70D;" FontSize="16"/>
                            </local:RadButton>
                            <CalendarDatePicker x:Name="PART_NavigationPicker"
                                                AutomationProperties.Name="Navigation Date Picker"
                                                Date="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=CurrentDate, Mode=TwoWay, Converter={StaticResource DateTimeToDateTimeOffsetConverter}}"
                                                Style="{StaticResource NavigationCalendarDatePickerStyle}"
                                                Margin="10 0 0 0"/>
                            <ContentControl x:Name="CurrentInterval" Margin="15 0 0 0"
                                            Content="{TemplateBinding CurrentVisibleRangeText}"
                                            Style="{StaticResource NavigationIntervalStyle}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <StackPanel BorderBrush="{ThemeResource TelerikScheduler_BorderBrush}"
                                        BorderThickness="0 0 1 0"
                                        VerticalAlignment="Center"
                                        Visibility="{TemplateBinding TodayButtonVisibility}">
                                <local:RadButton Visibility="{TemplateBinding TodayButtonVisibility}"
                                                 Command="{core:Static Member=local:RadSchedulerCommands.SetToday}"
                                                 CommandTarget="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                 Style="{StaticResource TodayButtonStyle}"
                                                 AutomationProperties.Name="Today"
                                                 Margin="0 0 1 0">
                                    <StackPanel Orientation="Horizontal">
                                        <BitmapIcon UriSource="ms-appx:///Telerik.WinUI.Controls/Scheduler/Icons/today.png" ShowAsMonochrome="False"/>
                                        <TextBlock Text="Today" Margin="5 0 0 0"/>
                                    </StackPanel>
                                </local:RadButton>
                            </StackPanel>
                            <ListBox x:Name="ViewModeSelection"
                                     Background="Transparent"
                                     AutomationProperties.Name="Navigation Definition Selection"
                                     SelectionMode="Single" ItemsSource="{TemplateBinding ViewDefinitions}"
                                     SelectedIndex="{Binding ActiveViewDefinitionIndex, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                     VerticalAlignment="Center"
                                     Margin="5 0">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource ViewModeListBoxItemStyle}">
                                        <Setter Property="Margin" Value="0 0 4 0"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <BitmapIcon UriSource="{Binding RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ViewModeToBitmapIconUriSourceConverter}}" ShowAsMonochrome="False"/>
                                            <TextBlock Text="{Binding}" Margin="8 0 0 0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>
                        </StackPanel>
                    </Grid>
                </Border>

                <ContentControl Grid.Row="1" Margin="0 0 -1 -1" HorizontalContentAlignment="Stretch">
                    <Grid x:Name="AppointmentsPanelGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Border x:Name="HeadersHeight" Grid.ColumnSpan="3" Height="{TemplateBinding HeadersLength}" />
                        <Border x:Name="HeadersWidth" Grid.RowSpan="3" Width="{TemplateBinding HeadersLength}" Margin="0 0 -1 0"/>

                        <local:TimeRulerPanel x:Name="PART_TimeRulerPanel" Grid.Row="0" Grid.Column="1"
                                              Orientation="{TemplateBinding EffectiveOrientation}"
                                              Offset="{Binding HorizontalOffset, RelativeSource={RelativeSource TemplatedParent}}"/>
                        <local:TimeIndicatorsPanel x:Name="PART_TimeRulerIndicatorsPanel" 
                                                   Grid.Row="0" Grid.Column="1"
                                                   Orientation="{TemplateBinding EffectiveOrientation}"/>
                        <local:AppointmentsPanel x:Name="PART_ItemsHost"
                                                 AutomationProperties.Name="Items Host"
                                                 Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                 Background="{x:Null}" Canvas.ZIndex="1"
                                                 Orientation="{TemplateBinding EffectiveOrientation}"/>

                        <telerikPrimitives:RadLayoutTransformControl
                            Grid.Row="1" Grid.Column="1"
                            VerticalAlignment="Center" HorizontalAlignment="Right"
                            Visibility="{TemplateBinding ComputedAppointmentNavigationButtonsVisibility}"
                            Canvas.ZIndex="1"
                            UseLayoutRounding="True"
                            UseSystemFocusVisuals="False">
                            <telerikPrimitives:RadLayoutTransformControl.LayoutTransform>
                                <RotateTransform Angle="-90" />
                            </telerikPrimitives:RadLayoutTransformControl.LayoutTransform>
                            <local:RadButton Command="{core:Static Member=local:RadSchedulerCommands.GoToNextAppointment}"
                                             CommandTarget="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                             Style="{StaticResource NavigateToAppointmentButtonStyle}"
                                             UseSystemFocusVisuals="False">
                                <Grid Width="160">
                                    <TextBlock core:LocalizationManager.Key="Scheduler_NextAppointment"
                                               core:LocalizationManager.PropertyName="Text"
                                               HorizontalAlignment="Left" VerticalAlignment="Center" />
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="12" Glyph="&#xE74B;" Margin="5 0 0 0" HorizontalAlignment="Right" />
                                </Grid>
                            </local:RadButton>
                        </telerikPrimitives:RadLayoutTransformControl>

                        <telerikPrimitives:RadLayoutTransformControl
                            Grid.Row="1" Grid.Column="1"
                            VerticalAlignment="Center" HorizontalAlignment="Left"
                            Visibility="{TemplateBinding ComputedAppointmentNavigationButtonsVisibility}"
                            Canvas.ZIndex="1"
                            UseLayoutRounding="True"
                            UseSystemFocusVisuals="False">
                            <telerikPrimitives:RadLayoutTransformControl.LayoutTransform>
                                <RotateTransform Angle="-90" />
                            </telerikPrimitives:RadLayoutTransformControl.LayoutTransform>

                            <local:RadButton Command="{core:Static Member=local:RadSchedulerCommands.GoToPreviousAppointment}"
                                             CommandTarget="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                             Style="{StaticResource NavigateToAppointmentButtonStyle}"
                                             UseSystemFocusVisuals="False">
                                <Grid Width="160">
                                    <TextBlock core:LocalizationManager.Key="Scheduler_PreviousAppointment"
                                               core:LocalizationManager.PropertyName="Text"
                                               HorizontalAlignment="Left" VerticalAlignment="Center" />
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" FontSize="12" Glyph="&#xE74A;" Margin="5 0 0 0" HorizontalAlignment="Right" />
                                </Grid>
                            </local:RadButton>
                        </telerikPrimitives:RadLayoutTransformControl>

                        <local:TimeRulerLinesPanel x:Name="PART_TimeRulerLinesPanel"
                                                   Grid.Row="1" Grid.Column="1"
                                                   Background="Transparent"
                                                   Orientation="{TemplateBinding EffectiveOrientation}"
                                                   PixelLength="{TemplateBinding EffectivePixelLength}"/>

                        <local:TimeIndicatorsPanel x:Name="PART_AppointmentsIndicatorsPanel" 
                                                   Grid.Row="1" Grid.Column="1"
                                                   Orientation="{TemplateBinding EffectiveOrientation}"/>

                        <local:HighlightPanel x:Name="PART_HighlightPanel"
                                              Grid.Row="1" Grid.Column="1"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Stretch"
                                              Background="Transparent"
                                              Orientation="{TemplateBinding EffectiveOrientation}"
                                              PixelLength="{TemplateBinding EffectivePixelLength}"
                                              IsHitTestVisible="False"
                                              Canvas.ZIndex="1"/>

                        <Border x:Name="AppointmentsBorder"
                                Grid.Row="1" Grid.Column="1"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1 1 1 1"
                                IsHitTestVisible="False"
                                Canvas.ZIndex="2"/>

                        <Border x:Name="VerticalHeadersBorder"
                                Grid.Row="1" Grid.Column="0"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0 1"
                                Canvas.ZIndex="3"/>

                        <Border x:Name="HorizontalHeadersBorder"
                                Grid.Row="0" Grid.Column="1"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                Canvas.ZIndex="3"/>

                        <ScrollBar x:Name="PART_HorizontalScrollBar"
                                   IndicatorMode="MouseIndicator"
                                   Grid.Row="2" Grid.Column="1"
                                   Orientation="Horizontal"
                                   ViewportSize="{TemplateBinding ViewportWidth}"
                                   Maximum="{TemplateBinding ExtentWidth}"
                                   Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                   SmallChange="{TemplateBinding HorizontalSmallChange}"
                                   LargeChange="{TemplateBinding HorizontalLargeChange}"/>

                        <ScrollBar x:Name="PART_VerticalScrollBar"
                                   IndicatorMode="MouseIndicator"
                                   Grid.Row="1" Grid.Column="2"
                                   Orientation="Vertical"
                                   ViewportSize="{TemplateBinding ViewportHeight}"
                                   Maximum="{TemplateBinding ExtentHeight}"
                                   Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                   SmallChange="{TemplateBinding VerticalSmallChange}"
                                   LargeChange="{TemplateBinding VerticalLargeChange}"
                                   Margin="-1 0 0 0"/>

                        <Grid x:Name="WarningsPanel" Grid.RowSpan="3" Grid.ColumnSpan="3" Canvas.ZIndex="2" Margin="0 1 1 1">
                            <Grid x:Name="ViewDefinitionWarning"
                                  Background="{TemplateBinding Background}"
                                  Visibility="{Binding ActiveViewDefinition, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource InvertedNullToVisibilityConverter}}">
                                <TextBlock core:LocalizationManager.Key="Scheduler_ViewDefinitionWarning"
                                           core:LocalizationManager.PropertyName="Text"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontSize="24"
                                           Margin="{ThemeResource TelerikScheduler_WarningsPanel_Margin}"/>
                            </Grid>
                            <Grid x:Name="AppointmentSourceWarning"
                                  Background="{TemplateBinding Background}"
                                  Visibility="{Binding AppointmentsSource, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource InvertedNullToVisibilityConverter}}">
                                <TextBlock core:LocalizationManager.Key="Scheduler_AppointmentSourceWarning"
                                           core:LocalizationManager.PropertyName="Text"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontSize="24"
                                           Margin="{ThemeResource TelerikScheduler_WarningsPanel_Margin}"/>
                            </Grid>
                            <Grid x:Name="NoAppointmentsWarning"
                                  Background="{TemplateBinding Background}"
                                  Visibility="{Binding IsVisibleRangeEmpty, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock core:LocalizationManager.Key="Scheduler_NoAppointments"
                                           core:LocalizationManager.PropertyName="Text"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontSize="24"
                                           Margin="{ThemeResource TelerikScheduler_WarningsPanel_Margin}"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </ContentControl>
            </Grid>
        </Grid>
    </ControlTemplate>

    <Style x:Key="RadSchedulerStyle" TargetType="local:RadScheduler">
        <Setter Property="local:ScrollingSettingsBehavior.IsEnabled" Value="True" />
        <Setter Property="local:ScrollingSettingsBehavior.ScrollAreaPadding" Value="30" />
        <Setter Property="local:ScrollingSettingsBehavior.ScrollStep" Value="5" />
        <Setter Property="local:ScrollingSettingsBehavior.ScrollStepTime" Value="00:00:00.01" />
        <Setter Property="Foreground" Value="{ThemeResource TelerikScheduler_Foreground}" />
        <Setter Property="Background" Value="{ThemeResource TelerikScheduler_Background}" />
        <Setter Property="BorderBrush" Value="{ThemeResource TelerikScheduler_BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="UseSystemFocusVisuals" Value="False"/>
        <Setter Property="Template" Value="{StaticResource RadSchedulerControlTemplate}" />

        <!-- GroupHeaders -->
        <Setter Property="GroupHeaderStyleSelector" Value="{StaticResource GroupHeaderStyleSelector}" />
        <Setter Property="GroupHeaderContentTemplateSelector" Value="{StaticResource GroupHeaderContentTemplateSelector}" />

        <!--PUBLIC: TimeIndicators -->
        <Setter Property="CurrentTimeIndicatorStyle" Value="{StaticResource CurrentTimeIndicatorStyle}" />
        <Setter Property="CurrentTimeIndicatorAppointmentsAreaStyle" Value="{StaticResource CurrentTimeIndicatorStyle}" />
        <Setter Property="TimeIndicatorItemStyleSelector" Value="{StaticResource TimeIndicatorsStyleSelector}"/>

        <!-- TimeRuler -->
        <Setter Property="TimeRulerItemStyleSelector" Value="{StaticResource TimeRulerItemStyleSelector}" />
        <Setter Property="TimeRulerItemTemplateSelector" Value="{StaticResource TimeRulerItemTemplateSelector}" />

        <!-- TimeSlot decorations -->
        <Setter Property="ResizeHighlightStyle" Value="{StaticResource ResizeHighlightStyle}" />
        <Setter Property="DragDropHighlightStyle" Value="{StaticResource DragDropHighlightStyle}" />
        <Setter Property="MouseOverHighlightStyle" Value="{StaticResource MouseOverHighlightStyle}" />
        <Setter Property="SelectionHighlightStyle" Value="{StaticResource SelectionHighlightStyle}" />
        <Setter Property="SpecialSlotStyleSelector" Value="{StaticResource SpecialSlotStyleSelector}" />

        <!-- AppointmentItem and decorations -->
        <Setter Property="MinAppointmentHeight" Value="26"/>
        <Setter Property="MinAppointmentWidth" Value="50" />
        <Setter Property="AppointmentStyleSelector" Value="{StaticResource AppointmentItemStyleSelector}" />
        <Setter Property="InlineEditingTemplate" Value="{StaticResource InlineEditTemplate}" />
        <Setter Property="ToolTipTemplate" Value="{StaticResource ToolTipTemplate}" />

        <!-- Drag Visual -->
        <Setter Property="DragVisualStyle" Value="{StaticResource DragVisualStyle}"/>
        <Setter Property="DragVisualTemplate" Value="{StaticResource DragVisualContentTemplate}" />

        <!-- Categories&Markers -->
        <Setter Property="CategoriesSource" Value="{StaticResource DefaultCategoryCollection}" />
        <Setter Property="TimeMarkersSource" Value="{StaticResource DefaultTimeMarkerCollection}" />
        <!-- Dialog styles -->
        <Setter Property="DeleteAppointmentConfirmDialogStyle" Value="{StaticResource DeleteAppointmentConfirmDialogStyle}" />
        <Setter Property="EditAppointmentDialogStyle" Value="{StaticResource EditAppointmentDialogStyle}" />
        <Setter Property="EditRecurrenceDialogStyle" Value="{StaticResource EditRecurrenceDialogStyle}" />
        <Setter Property="RecurrenceChoiceDialogStyle" Value="{StaticResource RecurrenceChoiceDialogStyle}" />
        <Setter Property="RecurrenceChoiceDeleteDialogStyle" Value="{StaticResource RecurrenceChoiceDeleteDialogStyle}" />
        <Setter Property="RecurrenceChoiceResizeDialogStyle" Value="{StaticResource RecurrenceChoiceResizeDialogStyle}" />
        <Setter Property="RecurrenceChoiceDragDropDialogStyle" Value="{StaticResource RecurrenceChoiceDragDropDialogStyle}" />
    </Style>

    <!-- Theme style setter -->
    <Style TargetType="local:RadScheduler" BasedOn="{StaticResource RadSchedulerStyle}" />
    <Style TargetType="local:AppointmentItem" BasedOn="{StaticResource AppointmentItemBaseStyle}" />
    <Style TargetType="local:GroupHeaderButton" BasedOn="{StaticResource GroupHeaderButtonStyle}" />
    <Style TargetType="local:GroupHeader" BasedOn="{StaticResource GroupHeaderBaseStyle}" />
    <Style TargetType="local:TimeRulerItem" BasedOn="{StaticResource MinorVerticalTimeRulerItemStyle}" />
    <Style TargetType="local:TimeRulerLine" BasedOn="{StaticResource TimeRulerLineStyle}" />
    <Style TargetType="local:TimeRulerGroupItem" BasedOn="{StaticResource TimeRulerGroupItemStyle}" />
    <Style TargetType="local:TimeRulerMonthViewItem" BasedOn="{StaticResource TimeRulerMonthViewItemStyle}" />
    <Style TargetType="local:TimeRulerMonthViewGroupItem" BasedOn="{StaticResource TimeRulerMonthViewGroupItemStyle}" />
    <Style TargetType="local:HighlightItem" BasedOn="{StaticResource HighlightItemStyle}"/>

    <!-- Dialogs in RadScheduleView-->
    <Style x:Key="RadSchedulerWindowStyle" BasedOn="{StaticResource RadWindowStyle}" TargetType="local:RadWindow" />

    <Style TargetType="local:SchedulerWindow" BasedOn="{StaticResource RadSchedulerWindowStyle}" />
</ResourceDictionary>
