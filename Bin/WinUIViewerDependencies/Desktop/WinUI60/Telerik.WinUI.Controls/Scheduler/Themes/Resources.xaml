                                     Visibility="{Binding ShowDeleteButton, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"
                                     Style="{StaticResource DeleteButtonStyle}"
                                     Command="{core:Static Member=local:RadSchedulerCommands.DeleteAppointment}"
                                     CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                     ClickMode="Press"
                                     IsTabStop="False"/>
                </Grid>
            </Grid>
        </Grid>
