<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Telerik.UI.Xaml.Controls"
    xmlns:core="using:Telerik.Core"
    xmlns:dragDrop="using:Telerik.UI.Xaml.Controls.DragDrop"
    xmlns:telerikScheduler="using:Telerik.UI.Xaml.Controls.Scheduler"
    xmlns:telerikPrimitives="using:Telerik.UI.Xaml.Controls.Primitives"
    xmlns:input="using:Telerik.UI.Xaml.Controls.Input">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark" Source="ms-appx:///Telerik.WinUI.Controls/Scheduler/Themes/ThemeResourcesDark.xaml"/>
                <ResourceDictionary x:Key="Light" Source="ms-appx:///Telerik.WinUI.Controls/Scheduler/Themes/ThemeResourcesLight.xaml"/>
                <ResourceDictionary x:Key="HighContrast" Source="ms-appx:///Telerik.WinUI.Controls/Scheduler/Themes/ThemeResourcesHighContrast.xaml"/>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>

        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark" Source="{CustomResource DarkResourcesPath}"/>
                <ResourceDictionary x:Key="Light" Source="{CustomResource LightResourcesPath}"/>
                <ResourceDictionary x:Key="HighContrast" Source="{CustomResource HighContrastResourcesPath}"/>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <core:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
    <core:EnumToBooleanConverter x:Key="EnumToBoolConverter" />

    <core:InvertedNullToVisibilityConverter x:Key="InvertedNullToVisibilityConverter"/>
    <core:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <core:InvertedVisibilityConverter x:Key="InvertedVisibilityConverter"/>
    <core:InvertedBooleanConverter x:Key="InvertedBooleanConverter"/>
    <telerikScheduler:AppointmentsSubjectToLocalizatedStringConverter DefaultTextKey="Untitled" x:Key="AppointmentsSubjectToLocalizatedStringConverter"/>
    <core:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    <core:EnumerableCountToVisibilityConverter x:Key="EnumerableCountToVisibilityConverter"/>
    <core:IntArrayToDoubleValueConverter x:Key="MultipleToSingleConverter"/>
    <core:StringFormatConverter x:Key="StringFormatConverter"/>
    <core:DateTimeToDateTimeOffsetConverter x:Key="DateTimeToDateTimeOffsetConverter"/>

    <local:WindowCommands x:Key="WindowCommands"/>

    <local:RadSchedulerCommands x:Key="RadSchedulerCommands"/>
    <telerikScheduler:ViewModeToBitmapIconUriSourceConverter x:Key="ViewModeToBitmapIconUriSourceConverter"/>
    <local:DraggedAppointmentsToLocalizedStringConverter x:Key="DraggedAppointmentsToLocalizedStringConverter" />
    <local:RecurrenceStateIsExeptionToVisibilityConverter x:Key="RecurrenceStateIsExeptionToVisibilityConverter"/>
    <local:RecurrenceStateIsOccurenceToVisibilityConverter x:Key="RecurrenceStateIsOccurenceToVisibilityConverter"/>

    <x:Double x:Key="TelerikSchedulerDialog_FooterMinHeight">48</x:Double>
    <x:Double x:Key="TelerikScheduler_NavigationHeaderHeight">64</x:Double>
    <x:Double x:Key="TelerikScheduler_GroupHeaderButtonWidthHeight">32</x:Double>
    <x:Double x:Key="TelerikSchedulerDialog_ButtonMinWidth">118</x:Double>
    <x:Double x:Key="TelerikScheduler_TimeRulerItem_FontSize">11</x:Double>
    <x:Double x:Key="TelerikScheduler_AppointmentToolBar_MinHeight">48</x:Double>
    <Thickness x:Key="TelerikScheduler_GroupHeaderButton_TodayBorderThickness">0 0 0 4</Thickness>
    <Thickness x:Key="TelerikScheduler_GroupHeader_TodayBorderThickness_Horizontal">1 0 1 1</Thickness>
    <Thickness x:Key="TelerikScheduler_GroupHeader_TodayBorderThickness_Vertical">0 1 1 1</Thickness>
    <Thickness x:Key="TelerikScheduler_MonthView_Item_TodayBorderThickness">0 4 0 0</Thickness>
    <Thickness x:Key="TelerikScheduler_WarningsPanel_Margin">15</Thickness>
    <Thickness x:Key="TelerikScheduler_DragVisualEffect_Margin">5 5 2 0</Thickness>
    <Thickness x:Key="TelerikSchedulerDialog_FooterBorderThickness">0 1 0 0</Thickness>
    <Thickness x:Key="TelerikSchedulerDialog_FooterMargin">13 0</Thickness>
    <Thickness x:Key="TelerikSchedulerDialog_FooterButtonMargin">2 0</Thickness>

    <DataTemplate x:Key="DragVisualContentTemplate">
        <TextBlock Text="{Binding Converter={StaticResource DraggedAppointmentsToLocalizedStringConverter}}" TextWrapping="Wrap" MaxWidth="200" MaxHeight="66" TextTrimming="WordEllipsis" Padding="4 3" />
    </DataTemplate>

    <Style TargetType="local:DurationPicker" BasedOn="{StaticResource DefaultComboBoxStyle}">
        <Setter Property="Width" Value="130"/>
    </Style>

    <Style TargetType="local:DragVisual" x:Key="DragVisualStyle" >
        <Setter Property="Foreground" Value="{ThemeResource TelerikScheduler_DragVisual_Foreground}" />
        <Setter Property="BorderBrush" Value="{ThemeResource TelerikScheduler_DragVisual_Border}" />
        <Setter Property="Background" Value="{ThemeResource TelerikScheduler_DragVisual_Background}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:DragVisual">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="EffectStates">
                                <VisualState x:Name="None">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="NoneEffect" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Move">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MoveEffect" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Copy">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CopyEffect" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Link">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LinkEffect" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Scroll">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ScrollEffect" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="SecondItemVisual" 
                                Visibility="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DraggedItemsSource, Converter={StaticResource EnumerableCountToVisibilityConverter}, ConverterParameter=3}" 
                                Margin="4 4 0 0"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"/>
                        <Border x:Name="ThirdthItemVisual"
                                Visibility="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DraggedItemsSource, Converter={StaticResource EnumerableCountToVisibilityConverter}, ConverterParameter=2}"
                                Margin="2" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"/>
                        <Border x:Name="DragBackgroundVisual" 
                                Opacity="0.75"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                Margin="0 0 2 2"/>

                        <Border Padding="{TemplateBinding BorderThickness}" Margin="0 0 4 4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <FontIcon x:Name="NoneEffect"
                                          Visibility="Collapsed"
                                          FontSize="16"
                                          FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                                          Glyph="&#xE871;"
                                          Margin="{ThemeResource TelerikScheduler_DragVisualEffect_Margin}"
                                          VerticalAlignment="Top"
                                          HorizontalAlignment="Left"
                                          Foreground="{TemplateBinding Foreground}"/>

                                <FontIcon x:Name="MoveEffect"
                                          Visibility="Collapsed"
                                          FontSize="16"
                                          FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                                          Glyph="&#xF0AF;"
                                          VerticalAlignment="Top"
                                          HorizontalAlignment="Left"
                                          Foreground="{TemplateBinding Foreground}"
                                          Margin="{ThemeResource TelerikScheduler_DragVisualEffect_Margin}"/>
                                <FontIcon x:Name="CopyEffect"
                                          Visibility="Collapsed"
                                          FontSize="16"
                                          FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                                          Glyph="&#xE710;"
                                          VerticalAlignment="Top"
                                          HorizontalAlignment="Left"
                                          Foreground="{TemplateBinding Foreground}"
                                          Margin="{ThemeResource TelerikScheduler_DragVisualEffect_Margin}"/>
                                <FontIcon x:Name="LinkEffect"
                                          Visibility="Collapsed"
                                          FontSize="16"
                                          FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                                          Glyph="&#xE71B;"
                                          VerticalAlignment="Top"
                                          HorizontalAlignment="Left"
                                          Foreground="{TemplateBinding Foreground}"
                                          Margin="{ThemeResource TelerikScheduler_DragVisualEffect_Margin}"/>
                                <FontIcon x:Name="ScrollEffect"
                                          Visibility="Collapsed"
                                          FontSize="16"
                                          FontFamily="{ThemeResource SymbolThemeFontFamily}" 
                                          Glyph="&#xEC8F;"
                                          VerticalAlignment="Top"
                                          HorizontalAlignment="Left"
                                          Foreground="{TemplateBinding Foreground}"
                                          Margin="{ThemeResource TelerikScheduler_DragVisualEffect_Margin}"/>

                                <ContentPresenter x:Name="Content" 
                                                  Grid.Column="1" 
                                                  Content="{TemplateBinding DraggedItemsSource}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}" 
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#region Edit recurrence dialogs-->
    <!--Open ocurrence / item dialog-->
    <ControlTemplate x:Key="RecurrenceChoiceTemplate" TargetType="local:SchedulerDialog">
        <StackPanel>
            <StackPanel Margin="10 10 10 0">
                <TextBlock x:Name="SubjectTextBlock"
                           AutomationProperties.AutomationId="SubjectTextBlock"
                           Margin="0 2"
                           Text="{Binding Occurrence.Appointment.Subject}"
                           Visibility="{Binding Occurrence.Appointment.Subject, Converter={StaticResource NullToVisibilityConverter}}"
                           TextWrapping="Wrap"/>
                <TextBlock x:Name="Untitled" Margin="0 2"
                           core:LocalizationManager.Key="Scheduler_Untitled"
                           core:LocalizationManager.PropertyName="Text"
                           Visibility="{Binding Occurrence.Appointment.Subject, Converter={StaticResource InvertedNullToVisibilityConverter}}"
                           TextWrapping="Wrap"/>
                <RadioButton AutomationProperties.AutomationId="OpenOccurrenceRB"
                             Margin="0 2"
                             core:LocalizationManager.Key="Scheduler_OpenOccurrence"
                             core:LocalizationManager.PropertyName="Content"
                             GroupName="RecurrenceModeChoice"
                             IsChecked="{Binding IsOccurrenceModeSelected, Mode=TwoWay}" />
                <RadioButton AutomationProperties.AutomationId="OpenSeriesRB"
                             Margin="0 2"
                             core:LocalizationManager.Key="Scheduler_OpenSeries"
                             core:LocalizationManager.PropertyName="Content"
                             GroupName="RecurrenceModeChoice"
                             IsChecked="{Binding IsSeriesModeSelected, Mode=TwoWay}" />
            </StackPanel>
            <Border x:Name="FooterControls"
                    Background="{ThemeResource TelerikSchedulerDialog_FooterBackground}"
                    BorderBrush="{ThemeResource TelerikSchedulerDialog_FooterBorderBrush}"
                    BorderThickness="{ThemeResource TelerikSchedulerDialog_FooterBorderThickness}"
                    MinHeight="{ThemeResource TelerikSchedulerDialog_FooterMinHeight}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            Margin="{ThemeResource TelerikSchedulerDialog_FooterMargin}">
                    <local:RadButton MinWidth="{ThemeResource TelerikSchedulerDialog_ButtonMinWidth}" 
                                     Margin="{ThemeResource TelerikSchedulerDialog_FooterButtonMargin}"
                                     CornerRadius="{ThemeResource TelerikControlCornerRadius}"
                                     core:LocalizationManager.Key="Scheduler_Ok"
                                     core:LocalizationManager.PropertyName="Content"
                                     Command="{core:Static Member=local:WindowCommands.Confirm}"
                                     local:RadWindow.ResponseButton="Accept"/>
                    <local:RadButton MinWidth="{ThemeResource TelerikSchedulerDialog_ButtonMinWidth}" 
                                     Margin="{ThemeResource TelerikSchedulerDialog_FooterButtonMargin}"
                                     CornerRadius="{ThemeResource TelerikControlCornerRadius}"
                                     core:LocalizationManager.Key="Scheduler_Cancel"
                                     core:LocalizationManager.PropertyName="Content"
                                     Command="{core:Static Member=local:WindowCommands.Cancel}"
                                     local:RadWindow.ResponseButton="Cancel"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ControlTemplate>
    <!--Delete ocurrence / item dialog-->
    <ControlTemplate x:Key="RecurrenceChoiceDeletingTemplate" TargetType="local:SchedulerDialog">
        <StackPanel>
            <StackPanel Margin="10 10 10 0">
                <TextBlock x:Name="SubjectTextBlock"
                           AutomationProperties.AutomationId="DeleteAppointmentTextBlock"
                           Margin="0 2" Text="{Binding Occurrence.Appointment.Subject}"
                           Visibility="{Binding Occurrence.Appointment.Subject, Converter={StaticResource NullToVisibilityConverter}}" />
                <TextBlock x:Name="Untitled" Margin="0 2"
                           core:LocalizationManager.Key="Scheduler_Untitled"
                           core:LocalizationManager.PropertyName="Text"
                           Visibility="{Binding Occurrence.Appointment.Subject, Converter={StaticResource InvertedNullToVisibilityConverter}}"/>
                <RadioButton AutomationProperties.AutomationId="DeleteOccurrenceRB" Margin="0 2"
                             core:LocalizationManager.Key="Scheduler_DeleteOccurrence"
                             core:LocalizationManager.PropertyName="Content"
                             GroupName="RecurrenceModeChoiceDel"
                             IsChecked="{Binding IsOccurrenceModeSelected, Mode=TwoWay}" />
                <RadioButton AutomationProperties.AutomationId="DeleteSeriesRB" Margin="0 2"
                             core:LocalizationManager.Key="Scheduler_DeleteSeries"
                             core:LocalizationManager.PropertyName="Content"
                             GroupName="RecurrenceModeChoiceDel"
                             IsChecked="{Binding IsSeriesModeSelected, Mode=TwoWay}" />
            </StackPanel>
            <Border x:Name="FooterControls" 
                    Background="{ThemeResource TelerikSchedulerDialog_FooterBackground}"
                    BorderBrush="{ThemeResource TelerikSchedulerDialog_FooterBorderBrush}"
                    BorderThickness="{ThemeResource TelerikSchedulerDialog_FooterBorderThickness}"
                    MinHeight="{ThemeResource TelerikSchedulerDialog_FooterMinHeight}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                            Margin="{ThemeResource TelerikSchedulerDialog_FooterMargin}">
                    <local:RadButton MinWidth="{ThemeResource TelerikSchedulerDialog_ButtonMinWidth}"
                                     Margin="{ThemeResource TelerikSchedulerDialog_FooterButtonMargin}"
                                     CornerRadius="{ThemeResource TelerikControlCornerRadius}"
                                     AutomationProperties.AutomationId="OKButton"
                                     core:LocalizationManager.Key="Scheduler_Ok"
                                     core:LocalizationManager.PropertyName="Content"
                                     Command="{core:Static Member=local:WindowCommands.Confirm}"
                                     local:RadWindow.ResponseButton="Accept"/>
                    <local:RadButton MinWidth="{ThemeResource TelerikSchedulerDialog_ButtonMinWidth}" 
                                     Margin="{ThemeResource TelerikSchedulerDialog_FooterButtonMargin}"
                                     CornerRadius="{ThemeResource TelerikControlCornerRadius}"
                                     AutomationProperties.AutomationId="CancelButton"
                                     core:LocalizationManager.Key="Scheduler_Cancel"
                                     core:LocalizationManager.PropertyName="Content"
                                     Command="{core:Static Member=local:WindowCommands.Cancel}"
                                     local:RadWindow.ResponseButton="Cancel"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ControlTemplate>
    <!--Resize ocurrence / item dialog-->
    <ControlTemplate x:Key="RecurrenceChoiceResizeTemplate" TargetType="local:SchedulerDialog">
        <StackPanel>
            <StackPanel Margin="10 10 10 0" VerticalAlignment="Top">
                <TextBlock Text="{Binding Occurrence.Appointment.Subject, Converter={StaticResource AppointmentsSubjectToLocalizatedStringConverter}, ConverterParameter=ResizeRecurringItemQuestion}" TextWrapping="Wrap" Margin="3" />
                <RadioButton AutomationProperties.AutomationId="ResizeOccurrenceRB" Margin="0 2"
                             core:LocalizationManager.Key="Scheduler_ResizeOccurrence"
                             core:LocalizationManager.PropertyName="Content"
                             GroupName="RecurrenceModeChoice" IsChecked="{Binding IsOccurrenceModeSelected, Mode=TwoWay}"/>
                <RadioButton AutomationProperties.AutomationId="ResizeSeriesRB" Margin="0 2"
                             core:LocalizationManager.Key="Scheduler_ResizeSeries"
                             core:LocalizationManager.PropertyName="Content"
                             GroupName="RecurrenceModeChoice" IsChecked="{Binding IsSeriesModeSelected, Mode=TwoWay}"/>
            </StackPanel>
            <Border x:Name="FooterControls" 
                    Background="{ThemeResource TelerikSchedulerDialog_FooterBackground}"
                    BorderBrush="{ThemeResource TelerikSchedulerDialog_FooterBorderBrush}"
                    BorderThickness="{ThemeResource TelerikSchedulerDialog_FooterBorderThickness}"
                    MinHeight="{ThemeResource TelerikSchedulerDialog_FooterMinHeight}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            Margin="{ThemeResource TelerikSchedulerDialog_FooterMargin}">
                    <local:RadButton MinWidth="{ThemeResource TelerikSchedulerDialog_ButtonMinWidth}"
                                     Margin="{ThemeResource TelerikSchedulerDialog_FooterButtonMargin}" 
                                     CornerRadius="{ThemeResource TelerikControlCornerRadius}"
                                     AutomationProperties.AutomationId="OKButton"
                                     core:LocalizationManager.Key="Scheduler_Ok"
                                     core:LocalizationManager.PropertyName="Content"
                                     Command="{core:Static Member=local:WindowCommands.Confirm}"
                                     local:RadWindow.ResponseButton="Accept"/>
                    <local:RadButton MinWidth="{ThemeResource TelerikSchedulerDialog_ButtonMinWidth}" 
                                     Margin="{ThemeResource TelerikSchedulerDialog_FooterButtonMargin}" 
                                     CornerRadius="{ThemeResource TelerikControlCornerRadius}"
                                     AutomationProperties.AutomationId="CancelButton"
                                     core:LocalizationManager.Key="Scheduler_Cancel"
                                     core:LocalizationManager.PropertyName="Content"
                                     Command="{core:Static Member=local:WindowCommands.Cancel}"
                                     local:RadWindow.ResponseButton="Cancel"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ControlTemplate>
    <!--Edit selected occurrences / Drag the series dialog-->
    <ControlTemplate x:Key="RecurrenceChoiceDragDropTemplate" TargetType="local:SchedulerDialog">
        <StackPanel>
            <StackPanel Margin="16 16 16 10">
                <TextBlock AutomationProperties.AutomationId="DragDropTextBlockID"
                           Text="{Binding Occurrence.Appointment.Subject,Converter={StaticResource AppointmentsSubjectToLocalizatedStringConverter}, ConverterParameter=Scheduler_DragRecurringItemQuestion}"
                           TextWrapping="Wrap" />
                <RadioButton AutomationProperties.AutomationId="DragDropOccurrenceRB" Margin="0 2"
                             core:LocalizationManager.Key="Scheduler_DragDropOccurrence"
                             core:LocalizationManager.PropertyName="Content"
                             GroupName="RecurrenceModeChoice" IsChecked="{Binding IsOccurrenceModeSelected, Mode=TwoWay}" />
                <RadioButton x:Name="DragDropSeriesRadioButton" Margin="0 2"
                             AutomationProperties.AutomationId="DragDropSeriesRadioButton"
                             core:LocalizationManager.Key="Scheduler_DragDropSeries"
                             core:LocalizationManager.PropertyName="Content"
                             GroupName="RecurrenceModeChoice" IsChecked="{Binding IsSeriesModeSelected, Mode=TwoWay}" />
            </StackPanel>
            <Border x:Name="Warning"
                    Background="{ThemeResource SystemListLowColor}"
                    BorderBrush="{ThemeResource SystemChromeMediumColor}"
                    BorderThickness="1" CornerRadius="2"
                    Visibility="{Binding ElementName=DragDropSeriesRadioButton, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock AutomationProperties.AutomationId="WarningTextBlock"
                           core:LocalizationManager.Key="Scheduler_DragRecurringWarning"
                           core:LocalizationManager.PropertyName="Text"
                           TextWrapping="Wrap" Margin="10" />
            </Border>
            <Grid x:Name="RepeatsGroup" Visibility="{Binding ElementName=Warning, Path=Visibility}" Margin="16 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock core:LocalizationManager.Key="Scheduler_RecurrencePattern"
                           core:LocalizationManager.PropertyName="Text"
                           FontSize="20"/>
                <TabView Background="{x:Null}" Grid.Row="1" MinHeight="160" Margin="-10 8 -10 0"
                         IsEnabled="{Binding DialogViewModel.IsReadOnly, Converter={StaticResource InvertedBooleanConverter}}">
                    <TabView.TabItems>
                        <TabViewItem x:Name="RepeatDaily"
                                     AutomationProperties.Name="RepeatDaily"
                                     AutomationProperties.AutomationId="RepeatDaily"
                                     Header="Daily"
                                     IsSelected="{Binding DialogViewModel.RecurrenceType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=[Telerik.UI.Xaml.Controls.Scheduler.RecurrenceType]Daily;WeekDays, Mode=TwoWay}">
                            <Grid Margin="10 10 10 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <RadioButton x:Name="DailyRB"
                                                 AutomationProperties.AutomationId="DailyRB"
                                                 Margin="0 2" VerticalAlignment="Center" GroupName="DailyGroup"
                                                 core:LocalizationManager.Key="Scheduler_Every"
                                                 core:LocalizationManager.PropertyName="Content"
                                                 IsChecked="{Binding DialogViewModel.RecurrenceType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=[Telerik.UI.Xaml.Controls.Scheduler.RecurrenceType]Daily, Mode=TwoWay}"  />
                                    <input:RadNumericBox x:Name="DailyDetailsUpDown"
                                                         AutomationProperties.AutomationId="DailyDetailsUpDown"
                                                         Margin="0 2" VerticalAlignment="Center" MinWidth="70"
                                                         AllowNullValue="False" ValueFormat="{}{0,0:N0}"
                                                         Minimum="1" Maximum="999"
                                                         Value="{Binding DialogViewModel.Interval, Mode=TwoWay}"/>
                                    <TextBlock Margin="5 2" VerticalAlignment="Center"
                                               core:LocalizationManager.Key="Scheduler_Days"
                                               core:LocalizationManager.PropertyName="Text" />
                                </StackPanel>
                                <RadioButton x:Name="WorkdaysRB"
                                             AutomationProperties.AutomationId="WorkdaysRB"
                                             Grid.Row="1" Margin="0 2" VerticalAlignment="Center"
                                             GroupName="DailyGroup"
                                             core:LocalizationManager.Key="Scheduler_EveryWeekday"
                                             core:LocalizationManager.PropertyName="Content"
                                             IsChecked="{Binding DialogViewModel.RecurrenceType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=[Telerik.UI.Xaml.Controls.Scheduler.RecurrenceType]WeekDays, Mode=TwoWay}" />
                            </Grid>
                        </TabViewItem>
                        <TabViewItem x:Name="RepeatWeekly"
                                     AutomationProperties.Name="RepeatWeekly"
                                     AutomationProperties.AutomationId="RepeatWeekly"
                                     Header="Weekly"
                                     IsSelected="{Binding DialogViewModel.RecurrenceType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=[Telerik.UI.Xaml.Controls.Scheduler.RecurrenceType]Weekly, Mode=TwoWay}">
                            <Grid Margin="10 10 10 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock Margin="0 2" VerticalAlignment="Center"
                                               core:LocalizationManager.Key="Scheduler_RecurEvery"
                                               core:LocalizationManager.PropertyName="Text" />
                                    <input:RadNumericBox x:Name="EveryWeekUpDown"
                                                         AutomationProperties.AutomationId="EveryWeekUpDown"
                                                         Margin="5 2" VerticalAlignment="Center" MinWidth="70" 
                                                         AllowNullValue="False" ValueFormat="{}{0,0:N0}"
                                                         Minimum="1" Maximum="99"
                                                         Value="{Binding DialogViewModel.Interval, Mode=TwoWay}"/>
                                    <TextBlock Margin="0 2" VerticalAlignment="Center"
                                               core:LocalizationManager.Key="Scheduler_WeeksOn"
                                               core:LocalizationManager.PropertyName="Text"/>
                                </StackPanel>
                                <ItemsControl Grid.Row="1" ItemsSource="{Binding DialogViewModel.WeekDays}" IsTabStop="False" Margin="0 10 0 0">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VariableSizedWrapGrid Orientation="Horizontal" ItemWidth="150" MaximumRowsOrColumns="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Name}"
                                                      AutomationProperties.AutomationId="{Binding Name}"
                                                      IsChecked="{Binding  IsSelected, Mode=TwoWay}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </TabViewItem>
                        <TabViewItem x:Name="RepeatMonthly" AutomationProperties.Name="RepeatMonthly"
                                     AutomationProperties.AutomationId="RepeatMonthly"
                                     Header="Monthly"
                                     IsSelected="{Binding DialogViewModel.RecurrenceType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=[Telerik.UI.Xaml.Controls.Scheduler.RecurrenceType]Monthly;MonthlyNth, Mode=TwoWay}">
                            <Grid Margin="10 10 10 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <RadioButton x:Name="MonthlyRB"
                                                 AutomationProperties.AutomationId="MonthlyRB"
