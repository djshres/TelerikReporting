                            Background="Transparent"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            Width="6"
                            Visibility="{Binding IsAllDay, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}"/>
