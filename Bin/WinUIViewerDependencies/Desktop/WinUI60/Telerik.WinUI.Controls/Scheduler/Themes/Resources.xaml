    <ControlTemplate x:Key="GroupHeaderButtonControlTemplate" TargetType="local:GroupHeaderButton">
        <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="CommandPointerOver">
                        <Storyboard>
                            <DoubleAnimation Duration="0:0:0.0" To="1" Storyboard.TargetName="PointerOverVisual" Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="CommandPressed">
                        <VisualState.Setters>
                            <Setter Target="Content.Foreground" Value="{ThemeResource TelerikScheduler_GroupHeaderButton_ForegroundPressed}"/>
                        </VisualState.Setters>
                        <Storyboard>
                            <DoubleAnimation Duration="0:0:0.0" To="1" Storyboard.TargetName="PressedVisual" Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="TodayStates">
                    <VisualState x:Name="NotToday" />
                    <VisualState x:Name="Today">
                        <Storyboard>
                            <DoubleAnimation Duration="0:0:0.0" To="1" Storyboard.TargetName="TodayBorderVisual" Storyboard.TargetProperty="Opacity" />
                            <DoubleAnimation Duration="0:0:0.0" To="1" Storyboard.TargetName="TodayBorderHorizontalVisual" Storyboard.TargetProperty="Opacity" />
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Content" Storyboard.TargetProperty="Foreground">
                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource TelerikScheduler_GroupHeaderButton_TodayForeground}" />
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Content" Storyboard.TargetProperty="(TextElement.FontWeight)">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <FontWeight>SemiBold</FontWeight>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="OrientationStates">
                    <VisualState x:Name="Horizontal">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Visuals" Storyboard.TargetProperty="LayoutTransform">
                                <DiscreteObjectKeyFrame KeyTime="0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <RotateTransform Angle="-90" />
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>

                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BackgroundVisual" Storyboard.TargetProperty="BorderThickness">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Thickness>1 1 0 0</Thickness>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TodayBorderHorizontalVisual" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TodayBorderVisual" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Vertical">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TodayBorderHorizontalVisual" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TodayBorderVisual" Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                    <DiscreteObjectKeyFrame.Value>
                                        <Visibility>Visible</Visibility>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <telerikPrimitives:RadLayoutTransformControl x:Name="Visuals">
                <Grid>
                    <Border x:Name="BackgroundVisual"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"/>

                    <Border x:Name="TodayBorderVisual" Opacity="0" Visibility="Collapsed"
                            BorderBrush="{ThemeResource TelerikScheduler_GroupHeaderButton_TodayBorderBrush}"
                            BorderThickness="{ThemeResource TelerikScheduler_GroupHeaderButton_TodayBorderThickness}"/>

                    <Border x:Name="TodayBorderHorizontalVisual" Opacity="0" Visibility="Collapsed"
                            BorderBrush="{ThemeResource TelerikScheduler_GroupHeaderButton_TodayBorderBrush}"
                            BorderThickness="0 4 0 0"
                            Margin="20 1"/>

                    <Border x:Name="PointerOverVisual" Opacity="0"
                            Background="{ThemeResource TelerikScheduler_GroupHeaderButton_Background_PointerOver}"
                            BorderThickness="{TemplateBinding BorderThickness}"/>

                    <Border x:Name="PressedVisual" Opacity="0"
                            Background="{ThemeResource TelerikScheduler_GroupHeaderButton_Background_Pressed}"
                            BorderThickness="{TemplateBinding BorderThickness}"/>

                    <ContentControl x:Name="Content"
                                    Foreground="{TemplateBinding Foreground}"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                                    HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                </Grid>
            </telerikPrimitives:RadLayoutTransformControl>
        </Grid>
    </ControlTemplate>

