                              Glyph="&#xE970;" 
                              Foreground="{ThemeResource TelerikScheduler_ExtendedArrow_Foreground}"
                              Visibility="{TemplateBinding EndIndicatorVisibility}"
                              HorizontalAlignment="Right"
